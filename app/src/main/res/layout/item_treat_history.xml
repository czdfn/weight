<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/panel_main"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/panel_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:id="@+id/view_top_line"
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:background="@color/color_theme" />

        <ImageView
            android:id="@+id/iv_start_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/item_treat_start_icon" />

        <View
            android:id="@+id/view_bottom_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_theme" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_treat_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="2014-04-02"
            android:textColor="@color/text_74"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/panel_treat_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:paddingTop="8dp">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>