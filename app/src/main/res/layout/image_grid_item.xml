<?xml version="1.0" encoding="UTF-8"?>
<com.chengsi.weightcalc.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_grid_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:tag="IMAGE_CONTENT_PATH" >
    </ImageView>
    <View
        android:id="@+id/image_grid_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" 
        android:background="@drawable/album_photo_select_sel"/>

    <ImageView
        android:id="@+id/image_grid_item_isselected"
        android:layout_margin="2dp"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" 
        android:src="@drawable/selected_photo"
        android:visibility="gone"/>

</com.chengsi.weightcalc.widget.SquareRelativeLayout>