<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical"
    tools:context="com.chengsi.weightcalc.activity.ReservationActivity">

    <com.chengsi.weightcalc.widget.PreferenceRightDetailView
        android:id="@+id/item_reservation_hospital"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/list_item_bg"
        app:contentLine="2"
        app:content_gravity="right"
        app:divider_location="both"
        app:prefrence_title="预约医院" />

    <RelativeLayout
        android:id="@+id/item_reservation_department"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/list_item_bg">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="科        室"
            android:textColor="@color/text_74"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_sex_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女科    "
                android:textColor="@color/text_5e" />

            <CheckBox
                android:id="@+id/cb_sex_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="男科    "
                android:textColor="@color/text_5e" />
        </LinearLayout>

        <View
            android:id="@+id/divider_top"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_reservation_category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/list_item_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="预约类别"
            android:textColor="@color/text_74"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="普通号"
                android:textColor="@color/text_5e" />

            <CheckBox
                android:id="@+id/cb_innormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="专家号"
                android:textColor="@color/text_5e" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_color" />
    </RelativeLayout>

    <com.chengsi.weightcalc.widget.PreferenceRightDetailView
        android:id="@+id/item_reservation_type"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/list_item_bg"
        android:visibility="gone"
        app:contentLine="2"
        app:content_gravity="right"
        app:divider_location="bottom"
        app:prefrence_title="预约类型" />

    <com.chengsi.weightcalc.widget.PreferenceRightDetailView
        android:id="@+id/item_reservation_program"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/list_item_bg"
        android:visibility="gone"
        app:contentLine="2"
        app:content_gravity="right"
        app:divider_location="bottom"
        app:prefrence_title="预约项目(可选)" />

    <com.chengsi.weightcalc.widget.PreferenceRightDetailView
        android:id="@+id/item_reservation_doctor"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/list_item_bg"
        app:contentLine="2"
        app:content_gravity="right"
        app:divider_location="bottom"
        app:prefrence_title="医        生" />

    <com.chengsi.weightcalc.widget.PreferenceRightDetailView
        android:id="@+id/item_reservation_time"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/list_item_bg"
        app:contentLine="2"
        app:content_gravity="right"
        app:divider_location="bottom"
        app:prefrence_title="预约时间" />

    <TextView
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/red_btn_sel"
        android:duplicateParentState="false"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="19dp" />
</LinearLayout>
