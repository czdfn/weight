<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chengsi.weightcalc.activity.ArchivesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/tips_build_archives"
        android:textColor="@color/text_74"
        android:textSize="14dp" />

    <com.chengsi.weightcalc.widget.PreferenceRightDetailView
        android:id="@+id/item_my_archives"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/list_item_bg"
        app:content_gravity="right"
        app:divider_location="both"
        app:prefrence_title="档案信息" />

    <com.chengsi.weightcalc.widget.PreferenceRightDetailView
        android:id="@+id/item_my_case"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/list_item_bg"
        app:content_gravity="right"
        app:divider_location="bottom"
        app:prefrence_title="病历信息" />

    <com.chengsi.weightcalc.widget.PreferenceRightDetailView
        android:id="@+id/item_apply_history"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/list_item_bg"
        app:content_gravity="right"
        app:divider_location="both"
        app:prefrence_title="建档申请记录" />
</LinearLayout>
