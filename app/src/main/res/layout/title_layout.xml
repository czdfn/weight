<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/toppest_container" >
    <RelativeLayout
        android:id="@+id/main_panel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/default_bg" >

    </RelativeLayout>
    
    <android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/colorPrimary"
		app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
		app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    
    <ImageView
            android:id="@+id/iv_right_reddot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/tab_unread" />
    
	<RelativeLayout
	    android:id="@+id/loading_view"
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent" 
	    android:background="#77f7f7f7"
	    android:layout_alignLeft="@+id/main_panel"
	    android:layout_alignRight="@+id/main_panel"
	    android:layout_alignTop="@+id/main_panel"
	    android:layout_alignBottom="@+id/main_panel"
	    android:visibility="gone"
	    />
</RelativeLayout>
