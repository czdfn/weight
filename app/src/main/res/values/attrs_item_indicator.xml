<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="item_indicator">       
        
        <attr name="indicator_showText" format="string" />
        
        <attr name="showTextSize" format="dimension"></attr>
        
        <attr name="showTextColor" format="color"></attr>
        <attr name="show_content" format="string" />

        <attr name="show_content_textSize" format="dimension"></attr>

        <attr name="show_content_textColor" format="color"></attr>

        <attr name="showIcon" format="reference"></attr>
        <attr name="accessIcon" format="reference"></attr>

        <attr name="dividerType" format="integer">
            <enum name="none" value="0"></enum>
            <enum name="top" value="1"></enum>
            <enum name="bottom" value="2"></enum>
            <enum name="both" value="3"></enum>
        </attr>
        
        <attr name="hasArrow" format="integer" >
            <enum name="none" value="0"></enum>
            <enum name="arrow" value="1"></enum>
        </attr>        
        
    </declare-styleable>
</resources>